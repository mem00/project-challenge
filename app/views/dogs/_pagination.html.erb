<nav class="pagination-bar">
  <button class="page-nav-button-arrow" id="back-arrow" <%=  "disabled" if page == 1 %> >&#8592</button>
  <% num_of_pages.times do |i|%>
    <button class="page-nav-button" <%= "id = current-page" if page == i + 1 %> > <%= i + 1 %></button>
  <%end%>
<button class="page-nav-button" id="forward-arrow" <%= "disabled" if page == num_of_pages %> >&#8594</button>